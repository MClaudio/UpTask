mixin crearProyecto(proyecto={})
    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
            .campo
                label(for="nombre") Nombre Proyecto
                input#nombre(type="text", name="nombre" value=proyecto.nombre placeholder="Nombre Proyecto")
            .campo.enviar
                input(type="submit", value=`${proyecto.id ? 'Guardar' : 'Agregar'}` class="boton")
    
